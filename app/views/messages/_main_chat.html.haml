.chat-main
  .group-info
    .group-name
      = @group.name
      .member-name 
        Member:
        - @group.users.each do |f|
          = f.name
    .edit
      = link_to edit_group_path(@group), class: "edit-btn" do
        Edit
  
  .message-list
    = render @messages
  
  .message-form
    .footer
      = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
        .text-box
          = f.text_field :content, class: "text", placeholder: 'type a message'
          = f.label :image, class: "image" do
            = icon('fas', 'image', class: "image__icon")
            = f.file_field :image, class: "image-file"
        = f.submit "Send", class: "send"
